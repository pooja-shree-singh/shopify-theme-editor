<!-- The Modal -->
<div id="generateInvoiceModal" class="modal">
  <div class="modal-content">
    <span class="close">&times;</span>
    <form id="invoiceForm">
      <label for="tin_number">{{ 'customer.orders.tin' | t }}</label>
      <input type="text" id="tin_number" name="tin_number">
      <span class="modal-form-error error-text">{{ 'customer.orders.formInputError' | t }}</span>
      <input type="hidden" id="orderId" name="orderId">
      <button type="submit">Submit</button>
      <span class="modal-form-tin-validation error-text">{{ 'customer.orders.tinError' | t }}</span>
      <span class="modal-form-ajax-validation error-text"></span>
    </form>
  </div>
</div>

<div id="QRModal" class="modal">
  <div class="modal-content">
    <span class="close">&times;</span>
    <img id="QRImage" src="" height="200" width="200" loading="lazy">
  </div>
</div>
{% schema %}
  {
  "name": "t:sections.invoice.name",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}